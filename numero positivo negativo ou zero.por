programa {
  funcao inicio() {
    inteiro numero
    escreva("Algoritmo para verificar se um número é POSITIVO ou NEGATIVO\n\n")
    escreva("Digite um numero: ")
    leia(numero)
    se(numero>0)
      escreva("\nO número é POSITIVO\n")
    senao se (numero<0)
      escreva("\nO número é NEGATIVO\n")
    senao)
      escreva("\nO número é ZERO\n")
  }
}
